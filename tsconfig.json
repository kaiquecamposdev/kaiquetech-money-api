{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",

    /* Modules */
    "module": "System",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",

    /* Type Checking */
    "strict": true,                                      
    "skipLibCheck": true,    

    /* Import Alias */
    "baseUrl": "./",                                    
    "paths": {
      "@/*": ["./src/*"]
    }, 
  }
}
