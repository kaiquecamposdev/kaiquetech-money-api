generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id         String    @id @default(uuid())
  created_at DateTime  @default(now())
  updated_at DateTime?

  name          String
  price         Float
  discount      Float?
  tax           Float?
  description   String?
  category      String?
  paymentMethod String

  @@map("trasanctions")
}
