generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Type {
  INCOME
  OUTCOME
}

enum PaymentMethod {
  CREDIT
  DEBIT
  MONEY
  PIX
  TED
  PAYMENTLINK
}

model Transaction {
  id String @default(uuid())

  typeId String
  type   TransactionType @relation(fields: [typeId], references: [id])

  paymentMethodId String
  paymentMethod   TransactionPaymentMethod @relation(fields: [paymentMethodId], references: [id])

  client_name String?
  description String
  category    String?
  subCategory String?
  price       Float
  discount    Float?
  tax         Float?
  date        DateTime?

  created_at DateTime  @default(now())
  updated_at DateTime?

  @@id([id, paymentMethodId, typeId])
  @@map("transactions")
}

model TransactionPaymentMethod {
  id String @id @default(uuid())

  name        PaymentMethod
  Transaction Transaction[]

  @@map("transactionPaymentMethods")
}

model TransactionType {
  id String @id @default(uuid())

  name Type

  Transaction Transaction[]

  @@map("transactionTypes")
}
