generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Transaction {
  id String @id @default(uuid())

  name          String
  description   String?
  category      String?
  subCategory   String?
  price         Float
  discount      Float?
  tax           Float?
  paymentMethod String

  created_at DateTime  @default(now())
  updated_at DateTime?

  @@map("trasanctions")
}
